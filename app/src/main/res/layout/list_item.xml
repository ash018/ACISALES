<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff">


    <!-- Row 1 with single column -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/businessname"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="30dp"  android:layout_span="3"
            android:padding="18dip" android:background="#b0b0b0"

            android:textColor="#FF9933CC"/>


    </TableRow>

    <!-- Row 2 with 3 columns -->

    <TableRow
        android:id="@+id/textview1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/textview2"
            android:text="Sales"
            android:textStyle="bold"
            android:background="#0AC474"
            android:textColor="#000000"
            android:padding="20dip"
            android:layout_width="0dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textview3"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#0AC474"
            android:gravity="center"
            android:padding="20dip"
            android:text="LMSD"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textview4"
            android:text="SPLY"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="#0AC474"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:padding="20dip" android:gravity="center"
            android:layout_height="match_parent" />

    </TableRow>


    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/curr"
            android:layout_width="0dp"
            android:background="#0AC474"
            android:gravity="center"
            android:padding="20dip"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/SLSCurLMSD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#0AC474"
            android:gravity="center"
            android:padding="20dip"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/SLSCurSPLY"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="#0AC474"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:padding="20dip"
            android:gravity="center"
            android:layout_height="match_parent" />
    </TableRow>

    <!-- Row 3 with 2 columns -->

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textview5"
            android:text="Cummulative Total"
            android:layout_weight="1"
            android:background="#0A97FF"
            android:textColor="#000000"
            android:textStyle="bold"
            android:padding="18dip" android:gravity="center"/>

        <TextView
            android:id="@+id/textview6"
            android:text="Cummulative Index"
            android:layout_weight="1"
            android:background="#0A97FF"
            android:textColor="#000000"
            android:textStyle="bold"
            android:padding="18dip" android:gravity="center"/>
    </TableRow>


    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/ctotal"
            android:layout_weight="1"
            android:background="#0A97FF"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:padding="18dip" android:gravity="center"/>

        <TextView
            android:id="@+id/SLSCumm"
            android:layout_weight="1"
            android:background="#0A97FF"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:padding="18dip"
            android:gravity="center"/>
    </TableRow>

</TableLayout>